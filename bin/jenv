#!/usr/bin/env python

"""Print 'env' as pretty JSON."""

from __future__ import print_function

import argparse
import os
import json

parser = argparse.ArgumentParser()
parser.add_argument("-i", "--indent", type=int, default=2)
args = parser.parse_args()
print(json.dumps(
    dict(os.environ),
    ensure_ascii=False,
    sort_keys=True,
    indent=args.indent,
))
